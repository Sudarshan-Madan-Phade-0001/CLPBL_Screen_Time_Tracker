{
  "manifest_version": 3,
  "name": "Screen Time Tracker",
  "version": "1.0",
  "description": "Block distracting websites after time limits",
  
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "background"
  ],
  
  "host_permissions": [
    "https://clpbl-screen-time-tracker.onrender.com/*",
    "http://localhost:5000/*",
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Screen Time Tracker"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "externally_connectable": {
    "matches": [
      "https://clpbl-screen-time-tracker.onrender.com/*",
      "http://localhost:5000/*"
    ]
  },
  
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}