{
  "manifest_version": 3,
  "name": "Screen Time Tracker",
  "version": "1.0",
  "description": "Block distracting websites after time limits",
  
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://clpbl-screen-time-tracker.onrender.com/*",
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Screen Time Tracker"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "externally_connectable": {
    "matches": [
      "https://clpbl-screen-time-tracker.onrender.com/*"
    ]
  },
  
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}